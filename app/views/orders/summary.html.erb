<%= render partial: 'header' %>

<div class="container">
  <div class="order-forms-container">
    <h5>Delivery Address:</h5>

    <div class="row">
      <div class="col l6">
        <span class="bold">Name: </span> <%= @user_address.name %>
      </div>
      <div class="col l6">
        <span class="bold">Email: </span> <%= @user_address.email %>
      </div>
    </div>
    <div class="row">
      <div class="col l6">
        <span class="bold">Phone: </span> <%= @user_address.phone %>
      </div>
      <div class="col l6">
        <span class="bold">Address: </span> <%= @user_address.address + ", " + @user_address.city %>
      </div>
    </div>
    <div class="row">
      <div class="col l6">
        <span class="bold">Landmark: </span> <%= @user_address.landmark %>
      </div>
      <div class="col l6">
        <span class="bold">State: </span> <%= @user_address.state + ", " + @user_address.country %>
      </div>
    </div>
    <div class="row">
      <div class="col l6">

      </div>
      <div class="col l6">

      </div>
    </div>

    <div class="border-wrap product-box">
      <table>
        <thead>
        <tr>
          <th>Image</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Sub Total</th>
        </tr>
        </thead>
        <tbody>

        <% total_amount = 0 %>
        <% @order.order_items.each do |order_item| %>
          <% total_amount += order_item.product.price.to_i * order_item.quantity.to_i %>
          <tr>
            <td><%= image_tag order_item.product.product_image_links.first.link_name, width: "50px" %></td>
            <td><span class="col l2"><%= order_item.product.name %></span></td>
            <td><span><%= order_item.quantity %></span></td>
            <td>
              <span class="col l2"><%= order_item.product.price.to_i %></span>
            </td>
            <td>
              <span class="col l2"><%= order_item.product.price.to_i * order_item.quantity.to_i %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="clearfix valign-wrapper right">
      Total <div class="total-amount-div bold">&#8358; <%= total_amount %></div>
      <%= button_to "Proceed to Payment", payment_orders_path, class: "btn" %>
    </div>
    <div class="clearfix"></div>

  </div>

</div>
<%= render partial: 'footer' %>
